<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

  <activeProfiles>
    <activeProfile>mercari</activeProfile>
  </activeProfiles>

  <profiles>
    <profile>
      <id>mercari</id>
      <repositories>
        <repository>
          <id>central</id>
          <url>https://mercari.jfrog.io/mercari/libs-release</url>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
        <repository>
          <id>snapshots</id>
          <url>https://mercari.jfrog.io/mercari/libs-snapshot</url>
          <releases>
            <enabled>false</enabled>
          </releases>
        </repository>
      </repositories>
    </profile>
  </profiles>

  <servers>
    <server>
      <id>central</id>
      <username>${env.JFROG_USERNAME}</username>
      <password>${env.JFROG_PASSWORD}</password>
    </server>
    <server>
      <id>snapshots</id>
      <username>${env.JFROG_USERNAME}</username>
      <password>${env.JFROG_PASSWORD}</password>
    </server>
  </servers>
</settings>
